<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body tabindex="-1">
    <!-- Nav bar -->
    <%- include('partials/navbar', { page: '/lego/addSet' }) %>

    <!-- Contents -->
    <div class="container mx-auto mt-4">

        <div class="bg-blue-800 rounded-lg shadow-lg p-6">
            <h1 class="text-3xl font-semibold mb-6"> Add Set </h1>
        </div>
        
        <div class="bg-blue-800 rounded-lg shadow-lg p-6 mt-8">
            <!-- Add set form -->
            <form action="/lego/addSet" method="post">

                <!-- Name input -->
                <div class="mb-4">
                    <label for="name" class="block text-lg font-medium text-white-600">Name: </label>
                    <input type="text" id="name" name="name" class="form-input" required>
                </div>

                <!-- Year input -->
                <div class="mb-4">
                    <label for="year" class="block text-lg font-medium text-white-600">Year: </label>
                    <input type="number" id="year" name="year" class="form-input" required>
                </div>
                
        
                <!-- Part number input -->
                <div class="mb-4">
                    <label for="num_parts" class="block text-lg font-medium text-white-600">Parts: </label>
                    <input type="number" id="num_parts" name="num_parts" class="form-input" required>
                </div>
                
        
                <!-- Image URL input -->
                <div class="mb-4">
                    <label for="img_url" class="block text-lg font-medium text-white-600">Image URL: </label>
                    <input type="url" id="img_url" name="img_url" class="form-input" required>
                </div>
                

                <!-- Theme select -->
                <div class="mb-4">
                    <label for="theme_id" class="block text-lg font-medium text-white-600">Theme: </label>
                    <select id="theme_id" name="theme_id" class="form-select" required>
                        <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>"><%= theme.name %></option>
                        <% }) %>
                    </select>
                </div>
                
                <!-- Set Number input -->
                <div class="mb-4">
                    <label for="set_num" class="block text-lg font-medium text-white-600">Set Number: </label>
                    <input type="text" id="set_num" name="set_num" class="form-input" required>
                </div>
                
                
                <!-- Submit button -->
                <button type="submit" class="btn btn-active btn-accent btn-primary"> Add </button>
            </form>
        </div>

    </div>
</body>
</html>
