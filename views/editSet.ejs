<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Set - <%= set.name %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body tabindex="-1">
    <!-- Nav bar -->
    <%- include('partials/navbar', { page: '' }) %>

    <!-- Contents -->
    <div class="container mx-auto my-10">

        <div class="bg-blue-800 rounded-lg shadow-lg p-6">
            <h1 class="text-3xl font-semibold mb-6">Edit Set - <%= set.name %></h1>
            <a href="#" class="btn btn-error text-white font-bold" onclick="confirmDelete()"> DELETE </a>
        </div>

        <div class="bg-blue-800 rounded-lg shadow-lg p-6 mt-8">
            <!-- Edit set form -->
            <form action="/lego/editSet" method="post">

                <!-- Name input --> 
                <div class="mb-4">
                    <label for="name" class="block text-lg font-medium text-white-600">Name: </label>
                    <input type="text" id="name" name="name" value="<%= set.name %>" class="form-input" required>
                </div>
                
                <!-- Year input -->
                <div class="mb-4">
                    <label for="year" class="block text-lg font-medium text-white-600">Year:</label>
                    <input type="number" id="year" name="year" value="<%= set.year %>" class="form-input" required>
                </div>

                <!-- Part number input -->
                <div class="mb-4">
                    <label for="num_parts" class="block text-lg font-medium text-white-600">Number of Parts:</label>
                    <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" class="form-input" required>
                </div>

                <!-- Image URL input -->
                <div class="mb-4">
                    <label for="img_url" class="block text-lg font-medium text-white-600">Image URL:</label>
                    <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" class="form-input" required>
                </div>

                <!-- Theme select -->
                <div class="mb-4">
                    <label for="theme_id" class="block text-lg font-medium text-white-600">Theme:</label>
                    <select id="theme_id" name="theme_id" class="form-select" required>
                        <% themes.forEach(theme => { %>
                            <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                                <%= theme.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Set Number input -->
                <div class="mb-4">
                    <label for="set_num" class="block text-lg font-medium text-white-600">Set Number:</label>
                    <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" class="form-input cursor-not-allowed" readonly>
                </div>
                
                <!-- Submit button -->
                <button type="submit" class="btn btn-active btn-accent btn-primary font-bold">Update Set</button>
            </form>
            <br>
        </div>
    </div>
    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this set?")) {
                window.location.href = "/lego/deleteSet/<%= set.set_num %>";
            }
        }
    </script>    
</body>
</html>
